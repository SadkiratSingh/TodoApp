<!--project heading-->
<h1 id='project-heading'>MY TODO LIST</h1>

<div class='collection'>

    <article id='all-tasks-collection'>

        <h3 class='main-heading'>Welcome</h3>
        
        <div class='hooks'>

            <form class='intro-form' action='/' method='get'>
                <div class='form-item'>
                    <label for='choose-category'>Choose Category:</label>
                    <select id='choose-category' name='category'>
                    <% for (let category of categories){ %>
                        <option value='<%= category.name %>'><%= category.name %></option>
                    <% } %>
                    </select>
                </div>
                <div class='form-item'>
                    <input class ='task-submit' type="submit" value='SUBMIT'>
                </div>
            </form>

            <button class='big-blue-button'><a href='/category'>MANAGE CATEGORIES</a></button>
        </div>
    </article>
</div>
   